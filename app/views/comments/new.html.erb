<h1>New Comment</h1>
<% flash.each do |key, message| %>
  <div class="error-message"><%= message %></div>
<% end %>
<%= form_with model: @comment, url: user_post_comments_path, local: true, method: :post, scope: :comment do |f| %>
  <div>
    <%= f.label :text, "Comment" %><br>
    <%= f.text_area :text %>
  </div>
  <%= f.submit "Create Comment" %>
<% end %>