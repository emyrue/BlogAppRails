<h1>New Post</h1>
<%= form_with model: @post, url: posts_path, method: :post, scope: :post do |f| %>
  <div>
    <%= f.label :title, "Title" %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :text, "Text" %><br>
    <%= f.text_area :text %>
  </div>
  <%= f.submit "Create Post" %>
<% end %>
<% flash.each do |key, message| %>
  <p><%= message %></p>
<% end %>